extend components/plantilla.pug
block contenidos
  section.intro
    .intro__imagen: img(src="/images/imagen.png", alt="")
    .intro__contenido
      h2 #{titulo}
      p #{lorem}
        span #{lorem}
      a.boton Leer mas
  main.contenido
    .aside
    .aside__content
      h2 Menu
      ul
        each menus in menu
          il=menus
    each titulo in titulos
      +caja("imagen.png", titulo, lorem)